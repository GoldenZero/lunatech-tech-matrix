# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /ping                       controllers.HomeController.ping

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# Get user by id
GET     /users/:userId               controllers.UserController.getUserById(userId: Int)

# Get all skills entered by a user
GET     /users/:userId/skills        controllers.SkillMatrixController.getSkillsByUserId(userId: Int)

# Adds a skill to a user
POST    /users/:userId/skills        controllers.SkillMatrixController.addSkillByUserId(userId: Int)

# Updates an existing skill of a user
PUT     /users/:userId/skill/:userSkillId    controllers.SkillMatrixController.updateSkillByUserId(userId: Int, userSkillId: Int)

# Deletes a skill from the list
DELETE /users/:userId/skill/:userSkillId     controllers.SkillMatrixController.deleteSkillByUserSkillId(userId: Int, userSkillId: Int)

# gets all skills entered by users
GET     /skills                     controllers.SkillController.getSkills

# Gets all skills entered by users together with info about users
#GET     /skillmatrix                controllers.SkillMatrixController.getSkills

# Gets all info related to a skill
GET     /skillmatrix/:skillId       controllers.SkillMatrixController.getSkillById(skillId: Int)